<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.StudentController"
            stylesheets="@/css/student.css"
            styleClass="root-container">

    <!-- MenÃº lateral izquierdo -->
    <left>
        <Pane fx:id="SideMenuContainer"
              prefWidth="250.0"
              styleClass="side-menu-container">
        </Pane>
    </left>

    <!-- Contenido principal -->
    <center>
        <VBox spacing="20.0" styleClass="main-content">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <children>
                <!-- Header -->
                <VBox spacing="10.0" styleClass="header-section">
                    <children>
                        <Label fx:id="lblWelcome"
                               text="Bienvenido, Estudiante"
                               styleClass="welcome-title"/>
                        <Label text="Mi Formato A"
                               styleClass="section-title"/>
                        <Separator styleClass="section-separator"/>
                    </children>
                </VBox>

                <!-- Contenedor del FormatA -->
                <VBox fx:id="FormatAContainer"
                      spacing="15.0"
                      styleClass="format-container">
                </VBox>

                <!-- Mensaje cuando no hay FormatA -->
                <Label fx:id="lblNoFormatA"
                       text="No tienes un Formato A asignado aÃºn."
                       styleClass="no-format-message"
                       visible="false"
                       managed="false"
                       textAlignment="CENTER"
                       alignment="CENTER"
                       wrapText="true">
                    <VBox.margin>
                        <Insets top="50" bottom="50"/>
                    </VBox.margin>
                </Label>

                <!-- BotÃ³n de actualizar -->
                <HBox alignment="CENTER" spacing="10.0" styleClass="actions-section">
                    <children>
                        <Button fx:id="btnRefresh"
                                text="ðŸ”„ Actualizar"
                                onAction="#handleRefresh"
                                styleClass="refresh-button"/>
                    </children>
                    <VBox.margin>
                        <Insets top="20"/>
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>