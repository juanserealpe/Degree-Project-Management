<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="App.Controllers.RegisterViewController"
            prefHeight="500.0" prefWidth="700.0"
            style="-fx-background-color: linear-gradient(to bottom, #1e1e77, #3498db);">

    <!-- Panel blanco centrado -->
    <VBox layoutX="200.0" layoutY="50.0" spacing="10.0" alignment="CENTER"
          prefWidth="300.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">

        <Label text="Registro" textFill="#1e1e77">
            <font>
                <Font name="Arial Bold" size="24.0"/>
            </font>
        </Label>

        <TextField fx:id="nombreField" promptText="Nombre"/>
        <TextField fx:id="apellidoField" promptText="Apellido"/>
        <TextField fx:id="emailField" promptText="Email"/>
        <PasswordField fx:id="passwordField" promptText="Password"/>
        <TextField fx:id="telefonoField" promptText="Número de teléfono (opcional)"/>

        <ComboBox fx:id="roleCombo" promptText="Rol" prefWidth="200.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Estudiante"/>
                    <String fx:value="Docente"/>
                    <String fx:value="Administrador"/>
                </FXCollections>
            </items>
        </ComboBox>        <ComboBox fx:id="programCombo" promptText="Programa" prefWidth="200.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Systems Engineering"/>
                    <String fx:value="Electronic Engineering"/>
                    <String fx:value="Industrial Automation"/>
                    <String fx:value="Technology in Telematics"/>
                </FXCollections>
            </items>
        </ComboBox>

        <Button fx:id="registerButton" text="Registrar"
                style="-fx-background-color: #1e1e77; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 8 16;"/>
    </VBox>
    <VBox fx:id="passwordTooltip" spacing="4"
          style="-fx-background-color: #ffffffee; -fx-background-radius: 6; -fx-padding: 10; -fx-border-color: #cccccc; -fx-border-radius: 6;"
          visible="false" maxWidth="250"
          StackPane.alignment="TOP_CENTER">
        <StackPane.margin>
            <Insets top="20.0"/>
        </StackPane.margin>

        <Label fx:id="lengthCheck" text="• Mínimo 8 caracteres" textFill="gray"/>
        <Label fx:id="uppercaseCheck" text="• Una letra mayúscula" textFill="gray"/>
        <Label fx:id="lowercaseCheck" text="• Una letra minúscula" textFill="gray"/>
        <Label fx:id="digitCheck" text="• Un número" textFill="gray"/>
        <Label fx:id="specialCheck" text="• Un carácter especial (!@#$...)" textFill="gray"/>
    </VBox>
    <!-- Botón Volver -->
    <Button fx:id="backButton" text="Volver" layoutX="20.0" layoutY="460.0"
            style="-fx-background-color: white; -fx-text-fill: #1e1e77; -fx-background-radius: 6; -fx-padding: 6 12;"/>



</AnchorPane>
