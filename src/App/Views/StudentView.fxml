<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="App.Controllers.StudentViewController"
            prefHeight="600.0" prefWidth="900.0"
            style="-fx-background-color: #f5f5f5;">

    <left>
        <VBox fx:id="panelMenu" spacing="20" alignment="TOP_CENTER"
              style="-fx-background-color: linear-gradient(to bottom, #4a6bff, #6a8aff); -fx-padding: 20;"
              prefWidth="200" BorderPane.alignment="CENTER">

            <effect>
                <DropShadow radius="10" offsetX="2" offsetY="2" color="rgba(0,0,0,0.2)"/>
            </effect>

            <Label text="Sesión Iniciada" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
                <padding>
                    <Insets bottom="20"/>
                </padding>
            </Label>

            <Label fx:id="jLabelEmail" text="usuario@ejemplo.com" textFill="WHITE"
                   style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 5; -fx-padding: 5 10;">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>

            <Region VBox.vgrow="ALWAYS"/>

            <Button fx:id="btnCerrarSesion" text="Cerrar Sesión"
                    style="-fx-background-color: #ff6666; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold;"
                    prefWidth="140" prefHeight="40">
                <effect>
                    <DropShadow radius="5" offsetX="2" offsetY="2" color="rgba(0,0,0,0.2)"/>
                </effect>
            </Button>
        </VBox>
    </left>

    <center>
        <VBox fx:id="panelRight" spacing="20" alignment="TOP_CENTER"
              style="-fx-background-color: white; -fx-padding: 20;"
              BorderPane.alignment="CENTER">

            <effect>
                <DropShadow radius="10" offsetX="2" offsetY="2" color="rgba(0,0,0,0.1)"/>
            </effect>

            <Label text="Gestión de Procesos" textFill="#4a6bff">
                <font>
                    <Font name="System Bold" size="20.0"/>
                </font>
                <padding>
                    <Insets bottom="10"/>
                </padding>
            </Label>

            <TableView fx:id="tblProcesos" prefHeight="350">
                <columns>
                    <TableColumn text="ID" prefWidth="60"/>
                    <TableColumn text="Título" prefWidth="200"/>
                    <TableColumn text="Estado" prefWidth="120"/>
                    <TableColumn text="Fecha" prefWidth="120"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <Button fx:id="btnCrearNuevoProceso" text="Crear Nuevo Proceso"
                    style="-fx-background-color: #00cc66; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold;"
                    prefWidth="180" prefHeight="40">
                <effect>
                    <DropShadow radius="5" offsetX="2" offsetY="2" color="rgba(0,0,0,0.2)"/>
                </effect>
            </Button>
        </VBox>
    </center>

</BorderPane>
