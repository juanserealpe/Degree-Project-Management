<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="App.Controllers.LoginViewController"
            prefHeight="400.0" prefWidth="600.0" >
    <Region layoutX="0" layoutY="0" prefWidth="600.0" prefHeight="400.0"
            style="-fx-background-color: linear-gradient(to bottom, #2e2eaa, #3498db);"/>

    <VBox layoutX="150.0" layoutY="100.0" spacing="15.0" alignment="CENTER"
          prefWidth="300.0" prefHeight="200.0"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">

        <Label text="SIMCA" textFill="#005baa">
            <font>
                <Font name="Arial Bold" size="24.0"/>
            </font>
        </Label>

        <TextField fx:id="usernameField" promptText="User"
                   style="-fx-background-radius: 6; -fx-padding: 8;"/>
       <PasswordField fx:id="passwordField" promptText="Password"
                          style="-fx-background-radius: 6; -fx-padding: 8;"/>


        <Button fx:id="loginButton" text="Ingresar"
                style="-fx-background-color: #005baa; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 8 16;"/>
        <Label fx:id="registerLabel" text="Doesn't have an account? click here"
               textFill="#005baa" style="-fx-underline: true; -fx-cursor: hand;">
            <font>
                <Font name="Arial" size="12.0"/>
            </font>
        </Label>
    </VBox>
</AnchorPane>
