<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.DashboardController">

    <!-- Barra superior -->
    <top>
        <ToolBar>
            <Label text="🏠 Dashboard Principal" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button text="Cerrar sesión" onAction="#handleLogout"/>
        </ToolBar>
    </top>

    <!-- Contenido central -->
    <center>
        <VBox spacing="15" alignment="CENTER">
            <Label text="Bienvenido al Dashboard!" style="-fx-font-size: 18px;" />
            <Button text="Opción 1" prefWidth="150"/>
            <Button text="Opción 2" prefWidth="150"/>
            <Button text="Opción 3" prefWidth="150"/>
        </VBox>
    </center>

</BorderPane>
